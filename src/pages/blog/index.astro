---
import ArrowCard from "@components/ArrowCard.astro";
import Container from "@components/Container.astro";
import { BLOG } from "@constants";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const blog = (await getCollection("blog")).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title={BLOG.TITLE} description={BLOG.DESCRIPTION}>
  <Container class="space-y-8">
    <h1 class="font-semibold text-black dark:text-white">{BLOG.TITLE}</h1>
    <p class="text-black dark:text-white">
      I'm a long-time lurker, and haven't written so much yet. But check back soon!
    </p>
    <ul class="flex flex-col gap-4">
      {
        blog.map((blog) => (
          <li>
            <ArrowCard entry={blog} />
          </li>
        ))
      }
    </ul>
  </Container>
</BaseLayout>
