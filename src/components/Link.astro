---
type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={`inline-block decoration-black/15 dark:decoration-white/30 hover:decoration-accent-green/50 text-current hover:text-accent-green transition-colors duration-300 ease-in-out ${underline && "underline underline-offset-2"}`}
  {...rest}
>
  <slot />
</a>
