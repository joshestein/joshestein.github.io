---
type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  class={`inline-block text-current ${underline && "underline underline-offset-2"}`}
  {...rest}
>
  <slot />
</a>
